{{#extend (layoutName "master") filename="login"}}
{{#content "head"}}
{{> head}}
{{/content}}

{{#content "title"}}
Login
{{/content}}

{{#content "mainContent"}}
{{> header}}

<main class="body-blue-md">
  <div class="container-small pt-5 text-center">
    <h1>Login</h1>
    <form class="mt-5" method="POST" action="/login/user">
      <div class="form-group mb-4">
        <label for="email" class="text-start d-block">Email</label>
        <input type="text" class="form-control" name="email" required>
      </div>
      <div class="form-group mb-4">
        <label for="password" class="text-start d-block">Password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <button type="submit" class="btn d-block w-100 btn-primary mt-5 min-width-300">Submit</button>
      <a href="/forgot-password" class="mt-4 d-inline-block text-grey">Forgot Password</a>
    </form>
  </div>
</main>
{{/content}}
{{/extend}}
